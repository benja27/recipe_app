<div class='chec'  id="<%= dom_id recipe %>">

      <h1 class="text-center py-3" > <%= recipe.name%> </h1>
  <div class="d-flex justify-content-between align-items-center m-0 pb-3" >


      <div class="d-flex gap-2 align-items-center" >
        <strong>Preparation time:</strong>      
        <%= recipe.preparation_time %> <p class='m-0' >hour</p>            
      </div>

      <div class='d-flex gap-3' >
          <label class="form-check-label" for="">
            Public:
          </label>
          <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" recipe_id="<%= @recipe.id %>" <%= @recipe.public ? 'checked' : '' %>>
        </div>
        
      </div>
  </div>

  <div class='mb-3'  >
    <strong>Cooking time:</strong>
    <%= recipe.cooking_time %>    
  </div>  

  <h3 class='pb-3' >
    steps go here...
  </h3>

  <div class='d-flex  justify-content-between pb-3' >    
    <%= link_to "Generate shopping list", shopping_lists_index_path(recipe_id: @recipe.id  ), class: "btn btn-success" %>
    
    <%= link_to "Add ingredient", new_recipe_food_path( recipe_id: @recipe.id  ), class: 'btn btn-light' %>
  </div>
  

  <hr class='bg-white py-1 rounded' >

  <div class="table-responsive check mb-3">
    <table class="table table-primary">
      <thead>
        <tr>
          <th scope="col">Food</th>
          <th scope="col">Quantity</th>
          <th scope="col">Value</th>
          <th class="text-center "  scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        
          
        <% @test.each do |ele| %>


          <tr class="">

            <td scope="row"> <%= ele.food.name %>  </td>
            <td>
            <%= ele.quantity   %> 
            <%= ele.food.measurement_unit %>  
            </td>


            <td> 
              <%= ele.food.price * ele.quantity %>
            </td>            

            <td class='d-flex gap-3 justify-content-center ' >  
              <%= link_to "Modify", edit_recipe_food_path(ele) %>              
              <%= button_to "Remove", ele, method: :delete %>
            </td>
          </tr>    
        <%end%>


      </tbody>
    </table>
  </div>
  

  
  

</div>
